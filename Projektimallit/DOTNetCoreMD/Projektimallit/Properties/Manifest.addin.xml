<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <!-- Kuvat ei tunnu toimivan
    <Extension path="/MonoDevelop/Core/StockIcons">
        <StockIcon stockid="Jypeli-img" resource="Icons\Jypeli-32.png" size="Menu" />
    </Extension> 
    
    <Extension path="/MonoDevelop/Ide/TemplateImages">
        <Image id="Fysiikkapeli-img" resource="Icons\Fysiikkapeli.ico"/>
    </Extension>
     -->
    <Extension path="/MonoDevelop/Ide/ProjectTemplateCategories">
        <Category id="jypeli" name="Jypeli">
            <Category id="netcore" name=".NET Core">
                <Category id="console" name="ConsoleMain" />
                <Category id="perus" name="Peli ilman fysiikkaa" />
                <Category id="fysiikka" name="Peli fysiikkamoottorilla" />
                <Category id="tasohyppely" name="Valmis pelipohja" />
            </Category>
        </Category>
    </Extension>

    <Extension path="/MonoDevelop/Ide/Templates">
      <Template
         id="Jypeli.Tasohyppelypeli.Template"
         _overrideName="Tasohyppelypeli"
         _overrideDescription="Peli jossa on valmiina tasohyppelyhahmo ja tasoja. Käyttää Physics2d-fysiikkamoottoria"
         path="Jypeli.Tasohyppelypeli.nupkg"
         category="jypeli/netcore/tasohyppely"/>
    </Extension>
    <Extension path="/MonoDevelop/Ide/Templates">
      <Template
         id="Jypeli.Fysiikkapeli.Template"
         _overrideName="Fysiikkapeli"
         _overrideDescription="Fysiikkapeli joka käyttää Physics2d-fysiikkamoottoria"
         path="Jypeli.Fysiikkapeli.nupkg"
         category="jypeli/netcore/fysiikka"/>
    </Extension>
    <Extension path="/MonoDevelop/Ide/Templates">
      <Template
         id="Jypeli.Peruspeli.Template"
         _overrideName="Peruspeli"
         _overrideDescription="Peli ilman fysiikkaa"
         path="Jypeli.Peruspeli.nupkg"
         category="jypeli/netcore/perus"/>
    </Extension>
    <Extension path="/MonoDevelop/Ide/Templates">
      <Template
         id="Jypeli.ConsoleMain.Template"
         _overrideName="ConsoleMain"
         _overrideDescription="Tyhjä Console Main-projekti, jossa kommenttien paikka valmiina"
         path="Jypeli.ConsoleMain.nupkg"
         category="jypeli/netcore/console"/>
    </Extension>
</ExtensionModel>
